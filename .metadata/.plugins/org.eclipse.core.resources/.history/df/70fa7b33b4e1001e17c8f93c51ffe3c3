	<h1>HTML5</h1>
	<form method="POST" action="ex18.jsp">
	
	이름: <input type="text">
	
	<hr>
	
	<label> 이름: <input type="text"></label>
	
	<hr>
	
	<input type="text"
			value="이름을 입력하세요."
			onfocus="this.value = '';">
	
	<input type="password" value="암호를 입력하세요.">
	
	<hr>
	<!--  placeholder 는 아래의 3개에서만 가능 -->
	
	<input type="text" placeholder="이름을 입력하세요.">
	
	<input type="password" placeholder="암호를 입력하세요.">
	
	<hr>
	
	<textarea placeholder="자기소개를 작성하세요." cols="50" rows="5"></textarea>
	
	<hr>
	
	<h2>입력값 체크(유효성 검사 - 필수값)</h2>
	
	<!--  required  -->
	
	<h3>로그인</h3>
	<div><input type="text" size="10" placeholder="아이디" required value="1"></div>
	<div><input type="password" size="10" placeholder="암호" value="1"></div>
	<hr>
	
	URL : <input type="text">
	<br>
	<!--  http:// 입력안할시, 형식 검사 , 모바일에서도 입력시 -->
	URL : <input type="url">

	<hr>	
	
	Email: <input type="email">
	<hr>
	
	<!--  input type="text" 는 최후의 수단으로 사용하기  -->
	숫자: <input type="number" min="0" max="100" step="10"> <!--  step은 증감치 -->
	
	<hr>
	
	범위: <input type="range" oninput="document.getElementById('rtxt').value=this.value;"
			min="20" max="500" step="50">
	<input type="text" id="rtxt">
	
	<hr>
	
	색상: <input type="color" onchange="document.getElementById('ctxt').value=this.value; document.body.bgColor=this.value;">
	<input type="text" id="ctxt">
	
	<hr>
	
	날짜 시간:
	<input type="date">
	<hr>
	<input type="month">
	<hr>
	<input type="week">
	<hr>
	<input type="time">
	<hr>
	<!--  https://html5test.opensuse.org/  -->
	<input type="datetime">
	<hr>
	<input type="datetime-local">
	<hr>
	
	
	<h2>목록</h2>
	사원명 : 
	<select>
		<option>홍길동</option>
		<option>아무개</option>
		<option>하하하</option>
	</select>
	
	<hr>
	
	사원명 : <input type="text" size="5" list="datalist1">
	
	<datalist id="datalist1">
		<option value="홍길동"></option>
		<option value="아무개"></option>
		<option value="하하하"></option>
	</datalist>
	
	<hr>
	
	<h2>진행률</h2>
	
	<!--  value : 백분율 -->
	<progress></progress><br>
	<progress value="0"></progress><br>
	<progress value="0.5"></progress><br>
	<progress value="1"></progress><br>
	<progress max="-100" value="100"></progress><br>
	
	<hr>
	
	<h2>수치</h2>
	<!--  숫자이므로 음수 가능 -->
	<meter></meter><br>
	<meter value="0"></meter><br>
	<meter value="0.5"></meter><br>
	<meter value="1" min="-100" max="100"></meter><br>
	
	<!--  범위 안에 들어가면 녹색, 범위 밖이면 노란색.. -->
	<meter value="30" min="0" max="100" low="40" high="80"></meter><br>
	<meter value="60" min="0" max="100" low="40" high="80"></meter><br>
	<meter value="100" min="0" max="100" low="40" high="80"></meter><br>
	
	<hr>
	
